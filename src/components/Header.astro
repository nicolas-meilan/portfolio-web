---
import { t } from "i18next";
import SectionRoutes from "../sectionRoutes";
import { MAIL } from "./Presentation.astro";
import LanguageSelector from "./LanguageSelector.astro";
import Background from "./Background.astro";

export const HEADER_BACKGROUND_ID = "headerBackground";
export const PROFILE_PIC = "/me/profile.jpg";
---

<div class="header-wrapper fixed w-full h-20 overflow-hidden top-0 z-10">
  <Background id={HEADER_BACKGROUND_ID} />
  <div class="web-config-multiline flex-row gap-x-4 items-center px-4 justify-end hidden">
    <LanguageSelector />
  </div>
  <header
    class="flex items-center justify-between mx-auto max-w-[1240px] px-4 h-20"
  >
    <img class="header-image rounded-full w-12 h-12" src={PROFILE_PIC} alt="profile pic" />
    <div class="flex flex-row gap-x-4 items-center">
      <nav class="flex flex-row gap-x-4 whitespace-nowrap">
        <a
          class="opacity-80 transition hover:text-yellow-400 hover:opacity-100"
          href={`#${SectionRoutes.EXPERIENCE}`}
        >
          {t("experience.title")}
        </a>
        <a
          class="opacity-80 transition hover:text-yellow-400 hover:opacity-100"
          href={`#${SectionRoutes.PROJECTS}`}
        >
          {t("projects.title")}
        </a>
        <a
          class="opacity-80 transition hover:text-yellow-400 hover:opacity-100"
          href={`#${SectionRoutes.ABOUT}`}
        >
          {t("about.title")}
        </a>
        <a
          class="opacity-80 transition hover:text-yellow-400 hover:opacity-100"
          href=`mailto: ${MAIL}`
        >
          {t("header.contact")}
        </a>
      </nav>
      <div class="web-config flex flex-row gap-x-4 items-center">
        <LanguageSelector />
      </div>
    </div>
  </header>
</div>
<div class="mb-40"></div>
