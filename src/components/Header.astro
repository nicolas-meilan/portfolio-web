---
import { t } from "i18next";
import SectionRoutes from "../sectionRoutes";
import { MAIL } from "./Presentation.astro";
import LanguageSelector from './LanguageSelector.astro';
import Background from "./Background.astro";

export const HEADER_BACKGROUND_ID = "headerBackground";
const PROFILE_PIC = "/me/profile.jpg";
---

<div class="fixed w-full h-20 overflow-hidden top-0 z-10">
  <Background id={HEADER_BACKGROUND_ID} />
  <header
    class="flex items-center justify-between mx-auto max-w-[1240px] px-4 h-20"
  >
    <img class="rounded-full w-12 h-12" src={PROFILE_PIC} alt="profile pic" />
    <div class="flex flex-row gap-x-6 items-center">
      <nav class="flex flex-row gap-x-6 opacity-80 whitespace-nowrap">
        <a href={`#${SectionRoutes.EXPERIENCE}`}>{t('experience.title')}</a>
        <a href={`#${SectionRoutes.PROJECTS}`}>{t('projects.title')}</a>
        <a href={`#${SectionRoutes.ABOUT}`}>{t('about.title')}</a>
        <a href=`mailto: ${MAIL}`>{t('header.contact')}</a>
      </nav>
      <LanguageSelector />
    </div>
  </header>
</div>
<div class="mb-40"></div>
